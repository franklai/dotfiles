[alias]
	ci = commit
	st = status
	br = branch
	co = checkout
	lg = log --stat
	la = log --graph --decorate --pretty=oneline --abbrev-commit --all
	lo = log --graph --pretty=format:'%C(auto)%h%C(auto)%d %C(reset)%s %C(green)(%ar) %C(bold blue)[%an]' --decorate --date=short
	ll = log --pretty=format:'%C(yellow)%h%Creset %ai %Cgreen%an%Creset %s' --graph
	dc = diff --cached
	lf = log --stat --decorate --format=fuller abbrev-commit

